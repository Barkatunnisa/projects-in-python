            self.initialAge=0
            print("Age is not valid, setting age to 0.")
            
    def amIOld(self):
        # to know the age group of the person 
        if 13>self.initialAge:
            print("You are young.")
        elif self.initialAge>=13 and 18>self.initialAge:
            print("You are a teenager.")
        else:
            print("You are old.")
    def yearPasses(self):
        # Increment the age of the person in here
        self.initialAge = 1+ self.initialAge 

